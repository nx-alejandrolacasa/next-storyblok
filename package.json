{
  "name": "next-storyblok",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev:https": "next dev --turbo --experimental-https --port 3010",
    "build": "next build",
    "pages:build": "npx @opennextjs/cloudflare build",
    "pages:dev": "npx wrangler dev",
    "pages:deploy": "npx wrangler deploy",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "test": "vitest run",
    "test:watch": "vitest",
    "block:pull-components": "storyblok components pull --space=$(grep STORYBLOK_SPACE .env | awk -F '=' '{print $2}')",
    "block:generate-types": "storyblok types generate --space $(grep STORYBLOK_SPACE .env | awk -F '=' '{print $2}') --type-prefix Sb --compiler-options .storyblok/storyblok.config.mjs",
    "block:types": "run-s block:pull-components block:generate-types"
  },
  "dependencies": {
    "@conform-to/react": "1.14.1",
    "@conform-to/zod": "1.14.1",
    "@hookform/resolvers": "5.2.2",
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/react-label": "2.1.8",
    "@radix-ui/react-slot": "1.2.4",
    "@storyblok/react": "5.4.20",
    "@storyblok/richtext": "3.8.2",
    "class-variance-authority": "0.7.1",
    "colord": "2.9.3",
    "next": "^16.0.8",
    "next-intl": "4.5.8",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "sanitize-html": "2.17.0",
    "sharp": "0.34.5",
    "tailwind-merge": "3.4.0",
    "zod": "3.25.32"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@opennextjs/cloudflare": "^1.14.4",
    "@tailwindcss/postcss": "4.1.17",
    "@types/node": "24.10.2",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/sanitize-html": "2.16.0",
    "clsx": "2.1.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.5.6",
    "storyblok": "4.11.0",
    "storyblok-generate-ts": "2.2.0",
    "tailwindcss": "4.1.17",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.15",
    "wrangler": "^4.53.0"
  }
}
